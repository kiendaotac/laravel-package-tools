{
    "name": "kiendaotac/laravel-package-tools",
    "description": "Tools for creating Laravel packages in my CMS",
    "keywords": [
        "kiendaotac",
        "laravel-package-tools"
    ],
    "homepage": "https://github.com/kiendaotac/laravel-package-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Kiên Đạo Tặc",
            "email": "hoangkien151092@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/contracts": "^7.0|^8.0",
        "mockery/mockery": "^1.4"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/test-time": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Kiendaotac\\LaravelPackageTools\\": "src",
            "Kiendaotac\\LaravelPackageTools\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiendaotac\\LaravelPackageTools\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
